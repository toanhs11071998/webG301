{% extends 'base.html.twig' %}

{% block title %}List of Student{% endblock %}

{% block body %}

    <section class="content-header">
        <h1>
            List of Student
        </h1>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Data Table With Full Features</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>No</th>
                                <th>Class Name</th>
                                <th>Class Code</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for classroom in classrooms %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ classroom.name }}</td>
                                    <td>{{ classroom.classcode }}</td>
                                    <td>
                                        <a href="{{ path('classroom_addStudent', {'id' : classroom.id}) }}" class="btn btn-info">Add Student</a>
                                        <a href="{{ path('classroom_edit', {'id': classroom.id}) }}" class="btn btn-warning">Edit</a>
                                        <a href="{{ path('classroom_delete', {'id': classroom.id}) }}" class="btn btn-danger" onclick="return confirm('Do you want to delete this student?')">Delete</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>No</th>
                                <th>Class Name</th>
                                <th>Class Code</th>
                                <th>Action</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
    {% block javascripts %}
        <script>
            $(document).ready(function() {
                $('#example1').DataTable()
            })
        </script>
    {% endblock %}
{% endblock %}
