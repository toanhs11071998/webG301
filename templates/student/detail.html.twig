{% extends 'base.html.twig' %}

{% block title %}Student Detail{% endblock %}

{% block body %}

    <section class="content-header">
        <h1>
            Student Detail
        </h1>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        <img class="profile-user-img img-responsive img-circle" src="{{ asset('images/'~student.avatar) }}"
                             alt="User profile picture">

                        <h3 class="profile-username text-center">{{ student.fullname }}</h3>

                        <p class="text-muted text-center">Software Engineer</p>

                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>DoB</b> <a class="pull-right">{{ student.dob |date('d-m-Y') }}</a>
                            </li>
                            <li class="list-group-item">
                                <b>Mobile</b> <a class="pull-right">{{ student.mobile }}</a>
                            </li>
                            <li class="list-group-item">
                                <b>Address</b> <a class="pull-right">{{ student.address }}</a>
                            </li>
                        </ul>
                        {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('student_edit', {'id': student.id}) }}" class="btn btn-warning btn-block"><b>Edit</b></a>
                        {% endif %}
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="box box-info">
                    <div class="box-header">
                        <h4>List of classrooms</h4>
                    </div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table no-margin">
                                <thead>
                                    <tr>
                                        <th>ClassCode</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for classroom in student.classrooms %}
                                    <tr>
                                        <td>{{ classroom.classcode }}</td>
                                        <td>{{ classroom.students|length }}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    {% block javascripts %}

    {% endblock %}
{% endblock %}
