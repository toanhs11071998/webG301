{% extends 'base.html.twig' %}

{% block title %}Hello StudentController!{% endblock %}

{% block body %}

    <section class="content-header">
        <h1>
            List of Student
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">List of Table</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Data Table With Full Features</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>Full name</th>
                                <th>DoB</th>
                                <th>Mobile</th>
                                <th>Address</th>
                                <th>Avatar</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                             {% for student in students %}
                            <tr>
                                <td>{{ student.fullname }}</td>
                                <td>{{ student.dob |date('d-m-Y') }}</td>
                                <td>{{ student.mobile }}</td>
                                <td>{{ student.address }}</td>
                                <td><img src="{{ asset('images/'~student.avatar) }}" alt="Student Image" width="100" height="100"></td>
                                <td>
                                    <a href="#" class="btn btn-warning">Edit</a>
                                    <a href="#" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Full name</th>
                                <th>DoB</th>
                                <th>Mobile</th>
                                <th>Address</th>
                                <th>Avatar</th>
                                <th>Action</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
    {% block javascripts %}
        <script>
            $(function () {
                $('#example1').DataTable()
            })
        </script>
    {% endblock %}
{% endblock %}
